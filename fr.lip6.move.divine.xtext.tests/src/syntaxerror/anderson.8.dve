


byte Slot[7] = {1, 0 ,0 ,0 ,0 ,0 ,0 ,0  };
byte next=0;




process P_0 {
byte my_place;
state NCS, p1, p2, p3, CS;
init NCS;
trans
 NCS -> p1 { effect my_place = next, next = next+1; },
 p1 -> p2 { guard my_place == 7-1; effect next = next-7; },
 p1 -> p2 { guard my_place != 7-1; effect my_place = my_place%7; },
 p2 -> p3 { guard Slot[my_place] == 1;  },
 p3 -> CS { effect Slot[my_place]=0; },
 CS -> NCS { effect Slot[(my_place+1)%7]=1;};
}
