<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

    <modelVersion>4.0.0</modelVersion>

  <parent>
	  <groupId>fr.lip6.move.gal</groupId>
	  <artifactId>fr.lip6.move.gal.parent</artifactId>
	  <version>1.0.0-SNAPSHOT</version>
	  <relativePath>../../fr.lip6.move.gal.parent/pom.xml</relativePath>
  </parent>

    <artifactId>fr.lip6.move.gal.louvain.binaries</artifactId>
    <packaging>eclipse-plugin</packaging>
    <name>Louvain binaries</name>
    <description>Louvain Community Detection, binary packaging.</description>

    <build>
        <plugins>
            <!-- Fetch the binaries from our integration platform -->
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-antrun-plugin</artifactId>
                <version>1.8</version>
                <executions>
                    <execution>
                        <id>compile</id>
                        <phase>compile</phase>
                        <configuration>
                            <target>
                                <echo message="Get Louvain binaries"/>
                                <get src="https://lip6.github.io/Louvain-BinaryBuild/louvain" dest="bin/louvain-linux64"/>
                                <get src="https://github.com/lip6/Louvain-BinaryBuilds/raw/osx/louvain" dest="bin/louvain-Darwin"/>
								<get src="https://ci.appveyor.com/api/projects/yanntm/Louvain-BinaryBuild/artifacts/website/louvain.exe" dest="bin/louvain-win64"/>
                                <chmod dir="bin/" type="file" perm="a+rx" includes="**/*"/>
                           </target>
                        </configuration>
                        <goals>
                            <goal>run</goal>
                        </goals>
                    </execution>
                </executions> 
            </plugin>
        </plugins>
    </build>

</project>
