<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

    <modelVersion>4.0.0</modelVersion>

  <parent>
	  <groupId>fr.lip6.move.gal</groupId>
	  <artifactId>fr.lip6.move.gal.parent</artifactId>
	  <version>1.0.0-SNAPSHOT</version>
	  <relativePath>../fr.lip6.move.gal.parent/pom.xml</relativePath>
  </parent>

    <artifactId>java.picocli</artifactId>
    <packaging>eclipse-plugin</packaging>
    <name>Picocli Library</name>
    <description>Provide Picocli as an osgi/eclipse bundle.</description>

    <build>
        <plugins>
            <!-- Fetch the CommandLine.java from Picocli GitHub repo -->
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-antrun-plugin</artifactId>
                <executions>
                    <execution>
                        <id>fetch-picocli</id>
                        <phase>initialize</phase>
                        <configuration>
                            <target>
                                <echo message="Fetching Picocli CommandLine.java"/>
                                <mkdir dir="src/picocli"/>
                                <get src="https://raw.githubusercontent.com/remkop/picocli/main/src/main/java/picocli/CommandLine.java"
                                     dest="src/picocli/CommandLine.java"/>
                            </target>
                        </configuration>
                        <goals>
                            <goal>run</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>

</project>
