<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

    <modelVersion>4.0.0</modelVersion>

  <parent>
	  <groupId>fr.lip6.move.gal</groupId>
	  <artifactId>fr.lip6.move.gal.parent</artifactId>
	  <version>1.0.0-SNAPSHOT</version>
	  <relativePath>../../fr.lip6.move.gal.parent/pom.xml</relativePath>
  </parent>

    <artifactId>fr.lip6.move.gal.itstools.binaries</artifactId>
    <packaging>eclipse-plugin</packaging>
    <name>ITS Tools binaries</name>
    <description>Symbolic state space generator(s) for ITS, binary packaging.</description>

    <build>
        <plugins>
            <!-- Fetch the binaries from our integration platform -->
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-antrun-plugin</artifactId>
                <executions>
                    <execution>
                        <id>compile</id>
                        <phase>compile</phase>
                        <configuration>
                            <target>
                                <echo message="Get ITS tools binaries"/>
                                <get src="https://github.com/lip6/libITS/raw/osx/its-reach" dest="bin/its-reach-Darwin"/>
                                <get src="https://lip6.github.io/libITS/its-reach" dest="bin/its-reach-linux64"/>
                                <get src="https://github.com/lip6/libITS/raw/Windows/its-reach.exe" dest="bin/its-reach-win64"/>

                                <get src="https://github.com/lip6/ITS-CTL/raw/osx/its-ctl" dest="bin/its-ctl-Darwin"/>
                                <get src="https://lip6.github.io/ITS-CTL/its-ctl" dest="bin/its-ctl-linux64"/>
                                <get src="https://github.com/lip6/ITS-CTL/raw/Windows/its-ctl.exe" dest="bin/its-ctl-win64"/>

                                <get src="https://github.com/lip6/ITS-LTL/raw/osx/its-ltl" dest="bin/its-ltl-Darwin"/>
                                <get src="https://lip6.github.io/ITS-LTL/its-ltl" dest="bin/its-ltl-linux64"/>
                                <get src="https://github.com/lip6/ITS-LTL/raw/Windows/its-ltl.exe" dest="bin/its-ltl-win64"/>
                                <chmod dir="bin/" type="file" perm="a+rx" includes="**/*"/>
                           </target>
                        </configuration>
                        <goals>
                            <goal>run</goal>
                        </goals>
                    </execution>
                </executions> 
            </plugin>
        </plugins>
    </build>

</project>
