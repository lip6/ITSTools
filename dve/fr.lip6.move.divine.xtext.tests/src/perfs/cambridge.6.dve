channel toK, fromK, toL, fromL;
channel sRESET1, sRESET2, rRESET1, rRESET2,
	sRDY1, sRDY2, 
	sNOTRDY1, sNOTRDY2, 
	rDATA1, rDATA2,
	rNODATA1, rNODATA2;

//constants
//const byte RESET = 0;
